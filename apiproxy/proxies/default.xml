<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>BA-Decode-Basic-Authentication-Headers</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>Extract_Token_Info</Name>
                <Condition>response.content != null</Condition>
            </Step>
            <Step>
                <Name>JS-ConvertExpiresInToMilliseconds</Name>
            </Step>
            <Step>
                <Name>OAuthv2-GenerateApigeeAccessToken</Name>
            </Step>
        </Response>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows/>
    <HTTPProxyConnection>
        <BasePath>/auth</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>